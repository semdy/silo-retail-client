transform(x = 0, y = 0, z = 0)
  -webkit-transform translate3d(x, y, z)
  transform translate3d(x, y, z)

transition(dur = 0.3s, ease = linear)
  -webkit-transition -webkit-transform dur ease
  transition transform dur ease

.sidenavigation
  display none
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  overflow-x hidden
  overflow-y auto
  background-color #131313
  transform(-80px)
  transition(0.3s, ease-out)
  -webkit-overflow-scrolling touch

.navigation-list
  margin-top 50px

.navigation-item
  margin-bottom 12px
  display block
  color #e5e5e5
  font-size 16px
  padding 12px 0 12px 15px

  .t-icon
    position relative
    margin-right 5px
    top -2px

  &:active
    background-color #000

  &.active
    color #008cee

.page-container
  transform(0)
  transition(0.3s, ease-out)

.show-sidebar
  .sidenavigation
    transform(0)

.show-sidebar
  .page-container
    transform(170px)


