@import "../../stylus-lib/var.styl"

.store-selector
  position fixed
  left 0
  right 0
  bottom 0
  border-top 1px solid #e0e0e0
  background-color #f9f9f9
  padding 10px 0
  z-index 905
  /*  makeShadow(0, -5px, 12px, rgba(0,0,0,.12))
    makeTransform(translate3d(0, 100%, 0))
    makeTransition(transform .5s ease)*/

  /* &.store-shown
     makeTransform(translate3d(0, 0, 0))*/

  .store-header{
    font-size 14px
    padding 0 0 10px
    text-align center
    color #888
  }

  .store-list
    max-height 300px
    overflow-x hidden
    overflow-y auto
    > li
      padding 12px 8px 12px 20px
      border-bottom 1px solid #f0f0f0
      &:active
        background-color rgba(0,0,0,.05)

      *
        pointer-events none

      > .t-icon
        float right
        margin-right 12px
        visibility hidden
        color #38adff

    > li:last-child
      border-bottom-color transparent

    > li.selected
      > .t-icon
        visibility visible

  .store-actions
    padding-top 10px


.rotate-popup-enter {
  animation(rotate-popup .6s both ease);
}

.rotate-popup-leave {
  animation(rotate-popdown .6s both ease);
}

@keyframes rotate-popup {
  0% {
    transform(rotate(90deg) translate(150%, -50%));
  }
  100% {
    transform(rotate(90deg) translate(50%, -50%));
  }
}

@keyframes rotate-popdown {
  0% {
    transform(rotate(90deg) translate(50%, -50%));
  }
  100% {
    transform(rotate(90deg) translate(150%, -50%));
  }
}