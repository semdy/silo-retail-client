@import "../../stylus-lib/var.styl"

.stats-container
  position relative
  padding 10px 5px
  .stats-bd
    /*makeGradient(#7d8bfe, #3b57d4)*/
    background-color gblue
    height 120px
    shadow()
  .stats-item
    //padding 30px 0
    text-align center
    color #f9f9f9

    .stats-value
      font-size 30px
      margin-bottom 8px
      margin-top 8px

      > em
        font-style: normal
        font-size: 14px
        margin-left 3px
  &.double:after
    content ""
    position absolute
    left 50%
    top 10px
    bottom 10px
    width 1px
    background-color rgba(255, 255, 255, .3)

  &.decolate
    .stats-bd
      background-image url(../../assets/img/stats_bg.png)
      background-repeat repeat-x
      background-size auto 70%

      &:after,
      &:before
        content ''
        position absolute
        left 0
        right 0
        height 50%
        bottom -12%
        background url('data:image/svg+xml;base64,') repeat-x
        background-size auto 100%

      &:after
        left -20%

