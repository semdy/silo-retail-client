@import '../../stylus-lib/var.styl'

.calendar-header
  background-color #e9e9e9

.calendar-cancel,
.calendar-confirm
  padding 15px

.calendar-title
  text-align center

  .t-button-group
    > .t-button
      padding-left 12px
      padding-right 12px

      @media (max-width 320px)
        padding-left 8px
        padding-right 8px

.calendar-tools
  padding 6px 0

  .cld-date-indicator
    margin-left 8px
    margin-right 8px
    min-width 80px
    text-align center

  .cld-switch
    padding 8px
    color gblue

.calendar-weeks
  background-color #f6f6f6
  .cld-week
    padding 8px
    text-align center

.calendar-rows
  .cld-day
    padding 8px
    text-align center

    span
      min-width 30px
      height 30px
      padding 3px
      white-space nowrap

  .gray-day
    color #999

  .current
    span
      color #fff
      background-color lighten(gblue, 30%)
      radius(15px)

  .current-blur
    span
      color gblue

  .selected
    span
      color #fff
      background-color gblue
      radius(15px)

  .disabled
    color #999
    background-color #f5f5f5



