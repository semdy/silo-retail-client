@import "../../stylus-lib/var.styl"

.charts-container
  width 100%
  overflow hidden

  .tool-fullscreen
    position absolute
    top 0
    right 0
    width 36px
    height 36px
    z-index 10

    .t-icon
      margin-left 6px
      margin-top 4px
      color #008cee

.charts-fullscreen
  .charts-main
    position fixed !important
    left 0
    top 0
    z-index 200
    background-color #f5f5f5 !important
    transform(rotate(90deg) translate(50%, -50%))

    > div
      z-index 0

  .tool-fullscreen
    position fixed
    z-index 205
    top 0
    left 0
    right auto
