@import "../../stylus-lib/var.styl"

.page-login
  position relative
  height 100%
  min-height 520px
  background-color #fff
  padding 60px 0 20px
  overflow hidden

  .form-item-bd
    background-color #fff

.login-wrapper
  position relative
  width 80%
  max-width 500px
  margin 0 auto
  z-index 10

.form-action
  margin-top 30px

.animate-bg
  position fixed
  left 0
  top 0
  pointer-events none

.logining-indict
  position fixed
  left 50%
  top 50%
  transform(translate(-50%, -50%))
  width 100px
  height 100px
  text-align center
  line-height 100px

  &:after
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    border 2px solid
    border-color gblue gblue transparent transparent
    radius(50%)
    animation(spin 1s linear infinite)