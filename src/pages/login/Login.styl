@import "../../stylus-lib/var.styl"

.page-login
  position relative
  height 100%
  min-height 520px
  background-color #fff
  padding 60px 0 20px
  overflow hidden

.login-wrapper
  position relative
  width 80%
  max-width 500px
  margin 0 auto
  z-index 10

.form-action
  margin-top 30px

.login-footer
  position absolute
  left 0
  width 100%
  bottom 0
  height 18%
  overflow hidden
  pointer-events none

  > div
    position absolute
    left 0
    top 0
    width 200%
    height 100%
    background url("data:image/svg+xml;base64,") repeat-x
    background-size 100% auto
    animation(wave 4s linear both infinite)


  .login-wave1
    -webkit-animation-delay -3s
    animation-delay -3s
    -webkit-animation-duration 10s
    animation-duration 10s

  .login-wave2
    -webkit-animation-delay -2s
    animation-delay -2s
    -webkit-animation-duration 8s
    animation-duration 8s

  .login-wave3
    margin-top 10%
    -webkit-animation-delay -1s
    animation-delay -1s
    -webkit-animation-duration 6s
    animation-duration 6s

.animate-bg
  position fixed
  left 0
  top 0
  pointer-events none

@keyframes wave
  0%
    transform(translate3d(-50%, 0, 0))
  100%
    transform(translate3d(0%, 0, 0))